<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css">
    <title>Login | Lego Collection</title>
</head>
<body class="min-h-screen bg-black">
    <%- include('partials/navbar', { page: '/login' }) %> <!-- Navbar partial -->

    <div class="container mx-auto px-4 py-6 md:p-8">
        <div class="max-w-md w-full mx-auto mt-10 p-6 bg-zinc-900 border-4 border-red-600 rounded-xl shadow-lg">
            <!-- Title -->
            <h2 class="text-3xl font-mono font-bold text-center text-white mb-6">Welcome Back!</h2>

            <!-- Form -->
            <form action="/login" method="POST" class="space-y-4">
                <!-- User Name -->
                <div class="form-group space-y-2">
                    <label for="userName" class="block text-gray-300 font-mono">User Name</label>
                    <input 
                        type="text" 
                        name="userName" 
                        id="userName" 
                        placeholder="Enter your user name" 
                        class="w-full px-4 py-2 text-white bg-zinc-800 border-2 border-red-600 rounded focus:ring-4 focus:ring-red-600 outline-none"
                        required>
                </div>

                <!-- Password -->
                <div class="form-group space-y-2">
                    <label for="password" class="block text-gray-300 font-mono">Password</label>
                    <input 
                        type="password" 
                        name="password" 
                        id="password" 
                        placeholder="Enter your password" 
                        class="w-full px-4 py-2 text-white bg-zinc-800 border-2 border-red-600 rounded focus:ring-4 focus:ring-red-600 outline-none"
                        required>
                </div>

                <!-- Submit Button -->
                <div class="mt-6">
                    <button 
                        type="submit" 
                        class="w-full px-6 py-2 bg-red-600 text-white font-bold rounded hover:bg-red-700 transition-colors">
                        Log In
                    </button>
                </div>
            </form>

            <!-- Error Message -->
            <% if (errorMessage) { %>
            <div class="mt-4 bg-zinc-800 border border-red-600 p-4 text-red-500 rounded flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 mr-2" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span><%= errorMessage %></span>
            </div>
            <% } %>

            <!-- Sign Up Link -->
            <div class="text-center mt-4">
                <p class="text-sm text-gray-300 font-mono">
                    Don't have an account? 
                    <a href="/register" class="text-red-600 hover:text-red-400">Register here</a>
                </p>
            </div>
        </div>
    </div>
</body>
</html>
